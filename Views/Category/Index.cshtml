@model List<Category>

<style>
    body {
        background-image: url("https://www.wsupercars.com/wallpapers-regular/Lamborghini/1985-Lamborghini-Countach-Quattrovalvole-003-1080.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        backdrop-filter: blur(4px);
        height: 100vh;
        margin: 0;
    }

</style>

<div>
    <div class="row">
        <div class="col-6">
            <h2>Category</h2>
        </div>
        
    </div>
</div>
<table class="fs-5 align-middle" style="background-color: none">
    <thead>
       <tr>
           <th>
               Sr.
           </th>
           <th>
               Name
           </th>
           <th></th>
            <th></th>
       </tr>
    </thead>
    <tbody>
        @{
            var i = 0;
        }
        @foreach(var obj in Model)/*.OrderBy(u => u.DisplayOrder))*/
        {
            <tr>
                <td>
                    @(++i)
                </td>
                <td>
                    @obj.Name
                </td>
                <td>
                    <a class=" btn-outline-warning" asp-controller="Category" asp-action="Update" asp-route-id="@obj.Id">
                        <i class="bi bi-pen"></i>
                    </a>
                </td>
                <td>
                    <a class=" btn-outline-danger" href="/Category/Delete/@obj.Id" onclick="return confirmDelete();">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col-6 ">
    <a class="btn-outline-success fs-5" asp-controller="Category" asp-action="Create"> <i class="bi bi-plus-circle"></i> </a>
</div>

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this category?");
    }
</script>